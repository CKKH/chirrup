<form action="/message" method="post">
  <input type="text" name="content"></input>
  <input type="submit" value="Submit"</input>
</form>
<% @messages.reverse.each do |message| %>
  <div>
    <%= message.timestamp %>: <a href=<%="/messages/#{message.id}"%>><%= message.content %></a>
  </div>
<% end %>
